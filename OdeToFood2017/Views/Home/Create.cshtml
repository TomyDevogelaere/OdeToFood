@using OdeToFood2017.Entities
@model OdeToFood2017.Entities.Restaurant
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Create</title>
</head>
<body>
    <h1>Create</h1>
   
        @using (Html.BeginForm())
        {
            <div>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div>
                @Html.LabelFor(m => m.Cuisine)
                @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList(typeof(CuisinType)));
            </div>
            <div>
                <input type="submit" value="Save"/>
            </div>
        }

</body>
</html>